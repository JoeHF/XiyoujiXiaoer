<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <include layout="@layout/camerahead"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="430dp"

        >
  <ImageView
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:id="@+id/picturesrc"/>
        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        />
    <LinearLayout
        style="@style/CommonBar_InLinearLayout_Style"
        android:background="@color/lightgray"
        >
        <TextView
            style="@style/TwoText_Left"
            android:text="重拍"
            />
        <ImageView
            style="@style/CommonBar_CenterText_Style"
            />
        <TextView
            style="@style/TwoText_Right"
            android:textColor="@color/seagreen"
            android:clickable="true"
            android:onClick="click_to_image6"
            android:text="确定使用"
            />
    </LinearLayout>
</LinearLayout>
