<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/roborder_head"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="click_to_myorder"
            android:text="订单"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:background="@color/trangrey" />

        <TextView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="我的"
            android:textColor="@color/white"
            android:background="@color/trangrey"
            android:clickable="true"
            android:onClick="click_to_showme" />


    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="@color/trangrey"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/white"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="fill_parent"
                android:src="@drawable/position"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="fill_parent" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|left"
                android:text="直行，至第一个路口左拐"
                />
            </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/white"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="fill_parent"
                android:src="@drawable/mycar"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="fill_parent" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|left"
                android:text="浙A  8888 奥迪6L 黑色"
                />
            <TextView
                android:layout_width="80dp"
                android:layout_height="fill_parent"
                android:textColor="@color/blue"
                android:gravity="center_vertical|left"
                android:text="查看照片"
                android:clickable="true"
                android:onClick="click_to_photo"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:src="@drawable/phone2"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/trangrey"
            >

            <TextView
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:background="@drawable/textview_round_style"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:onClick="click_to_arrive"
                android:text="马上出发"
                android:textSize="20dp"
                android:textColor="@color/white"
                />

    </RelativeLayout>
     </LinearLayout>

    </RelativeLayout>
</LinearLayout>