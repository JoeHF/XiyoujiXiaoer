<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/ActionBar_Style">

        <ImageView
            android:clickable="true"
            android:onClick="click_to_back"
            style="@style/ActionBar_LeftImg_Style"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/title"
            style="@style/ActionBar_CenterText_Style"
            android:text="服务总金额"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:background="@color/main_theme_tab_color"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="left|center_vertical"
                android:text="服务总金额"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/income"
                android:layout_width="200dp"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:textSize="30dp"
                android:text="15600"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="left|center_vertical"
                android:textSize="20dp"
                android:text="元"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:textSize="20dp"
            android:text="本月"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/record1"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:visibility="invisible"
        android:orientation="vertical"
        >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        />
        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/white"

            >
            <TextView
                android:id="@+id/type1"
                android:gravity="center_vertical|left"
                android:layout_width="280dp"
                android:layout_height="fill_parent" />
            <TextView
                android:id="@+id/price1"
                android:layout_width="fill_parent"
                android:gravity="center_vertical|right"
                android:layout_height="fill_parent" />
            </LinearLayout>

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/white"

            >
            <TextView
                android:id="@+id/time1"
                android:gravity="center_vertical|left"
                android:layout_width="280dp"
                android:layout_height="fill_parent" />
            <TextView
                android:id="@+id/number1"
                android:layout_width="fill_parent"
                android:gravity="center_vertical|right"
                android:layout_height="fill_parent"
                android:text="139***223"
                />
        </LinearLayout>
